	:}
|
expr:e1 ENTRE expr:e2 
	{:
		try{
			if((e1.tipo.equals("TIPO_FLOAT")) || (e2.tipo.equals("TIPO_FLOAT")){
				float res = e1.valor.floatValue() / e2.valor.floatValue();
				RESULT = new Simbolo("", "TIPO_FLOAT", res);
