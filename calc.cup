|
expr:e1 POW expr:e2

	{:
		try{
			float valor = Float.valueOf((float)Math.pow(e1.valor.floatValue()));
			RESULT = new Simbolo ("", "TIPO_FLOAT", valor);
		}catch(Exception exc){RESULT=null;}
	:}
|
ABRE_PARENTESIS expr:e CIERRA_PARENTESIS 
{: RESULT=e; :} 
